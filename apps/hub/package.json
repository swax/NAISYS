{
  "name": "@naisys/hub",
  "version": "1.0.0",
  "description": "NAISYS Hub - Enables monitoring and communication of between multiple NAISYS agent managers",
  "type": "module",
  "main": "dist/naisysHub.js",
  "exports": {
    ".": "./dist/naisysHub.js",
    "./services/hubServerLog": "./dist/services/hubServerLog.js",
    "./services/runnerServer": "./dist/services/runnerServer.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "tsx watch src/naisysHub.ts",
    "start": "node dist/naisysHub.js",
    "build": "tsc",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@naisys-supervisor/server": "file:../supervisor/server"
  },
  "dependencies": {
    "@naisys/common": "file:../../packages/common",
    "@naisys/hub-database": "file:../../packages/hub-database",
    "@naisys/hub-protocol": "file:../../packages/hub-protocol",
    "commander": "^14.0.3",
    "dotenv": "^17.2.4",
    "js-yaml": "^4.1.1",
    "pino": "^10.3.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "text-table": "^0.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@types/text-table": "^0.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
