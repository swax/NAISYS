{
  "name": "@naisys-supervisor/server",
  "version": "1.0.0",
  "description": "NAISYS Supervisor - Fastify backend server",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": "./dist/server.js"
  },
  "scripts": {
    "clean": "rimraf dist client-dist",
    "dev": "tsx watch src/server.ts monitor=naisys",
    "start": "node dist/server.js monitor=naisys",
    "build": "tsc && npx shx cp -r ../client/dist client-dist",
    "type-check": "tsc --noEmit",
    "npm:publish:dryrun": "npm run clean && npm run build && npm publish --dry-run",
    "db:seed": "tsx src/seed.ts"
  },
  "files": [
    "dist",
    "client-dist"
  ],
  "peerDependencies": {
    "@naisys-erp/server": "file:../../erp/server"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@naisys/common": "file:../../../packages/common",
    "@naisys-supervisor/client": "file:../client",
    "@naisys-supervisor/shared": "file:../shared",
    "@naisys/database": "file:../../../packages/database",
    "@scalar/fastify-api-reference": "^1.44.16",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "pino-pretty": "^13.1.3",
    "bcrypt": "^6.0.0",
    "sqlite3": "^5.1.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
