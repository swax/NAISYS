{
  "name": "@naisys-overlord/server",
  "version": "1.0.0",
  "description": "NAISYS Overlord - Fastify backend server",
  "type": "module",
  "main": "dist/server.js",
  "exports": {
    ".": "./dist/server.js"
  },
  "scripts": {
    "clean": "rm -rf dist client-dist",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc && cp -r ../client/dist client-dist",
    "type-check": "tsc --noEmit",
    "npm:publish:dryrun": "npm run clean && npm run build && npm publish --dry-run"
  },
  "files": [
    "dist",
    "client-dist"
  ],
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@naisys/database": "file:../../../packages/database",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.1.0",
    "pino-pretty": "^13.1.2",
    "shared": "file:../shared",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
