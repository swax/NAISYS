{
  "name": "naisys-monorepo",
  "version": "1.0.0",
  "description": "NAISYS monorepo containing NAISYS core and related applications",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "apps/overlord/server",
    "apps/overlord/client",
    "apps/overlord/shared",
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces --if-present",
    "compile": "npm run compile --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "eslint": "npm run eslint --workspaces --if-present",
    "prettier": "prettier --write .",
    "agent:assistant": "npm run agent:assistant --workspace=apps/naisys",
    "agent:scdb:program-director": "npm run agent:scdb:program-director --workspace=apps/naisys",
    "naisys": "npm run --workspace=apps/naisys",
    "overlord:dev": "npm run dev --workspace=apps/overlord",
    "overlord:build": "npm run build --workspace=apps/overlord",
    "overlord:start": "npm run start --workspace=apps/overlord",
    "updates:check": "npm-check-updates",
    "updates:apply": "npm-check-updates -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swax/NAISYS.git"
  },
  "keywords": [
    "ai",
    "agent",
    "automation",
    "naisys",
    "monorepo"
  ],
  "author": "John Marshall",
  "license": "MIT",
  "homepage": "https://naisys.org",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.38.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "npm-check-updates": "^17.1.14"
  }
}
