{
  "name": "naisys-monorepo",
  "version": "1.0.0",
  "description": "NAISYS monorepo containing NAISYS core and related applications",
  "private": true,
  "packageManager": "npm@11.7.0",
  "type": "module",
  "workspaces": [
    "packages/common",
    "packages/database",
    "packages/hub-protocol",
    "apps/erp/shared",
    "apps/erp/client",
    "apps/erp/server",
    "apps/supervisor/shared",
    "apps/supervisor/client",
    "apps/supervisor/server",
    "apps/hub",
    "apps/naisys"
  ],
  "scripts": {
    "clean": "turbo clean",
    "build": "turbo build",
    "rebuild": "turbo clean && turbo build --force",
    "test": "turbo test",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "publish:dryrun": "npm run clean && npm run build && npm run npm:publish:dryrun --workspaces --if-present",
    "updates:check": "npm-check-updates && npm-check-updates --workspaces",
    "updates:apply": "npm-check-updates -u && npm-check-updates --workspaces -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swax/NAISYS.git"
  },
  "keywords": [
    "ai",
    "agent",
    "automation",
    "naisys",
    "monorepo"
  ],
  "author": "John Marshall",
  "license": "MIT",
  "homepage": "https://naisys.org",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "rimraf": "6.1.2",
    "turbo": "^2.8.5",
    "typescript": "^5.9.3"
  }
}
