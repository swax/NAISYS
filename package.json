{
  "name": "naisys-monorepo",
  "version": "1.0.0",
  "description": "NAISYS monorepo containing NAISYS core and related applications",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/database",
    "packages/hub-protocol",
    "apps/hub",
    "apps/supervisor/shared",
    "apps/supervisor/client",
    "apps/supervisor/server",
    "apps/naisys"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "eslint": "npm run eslint --workspaces --if-present",
    "prettier": "prettier --write .",
    "publish:dryrun": "npm run clean && npm run build && npm run npm:publish:dryrun --workspaces --if-present",
    "updates:check": "npm-check-updates && npm-check-updates --workspaces",
    "updates:apply": "npm-check-updates -u && npm-check-updates --workspaces -u && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swax/NAISYS.git"
  },
  "keywords": [
    "ai",
    "agent",
    "automation",
    "naisys",
    "monorepo"
  ],
  "author": "John Marshall",
  "license": "MIT",
  "homepage": "https://naisys.org",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "npm-check-updates": "^19.3.1"
  }
}
