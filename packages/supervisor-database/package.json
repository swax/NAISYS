{
  "name": "@naisys/supervisor-database",
  "version": "1.0.0",
  "type": "module",
  "description": "Supervisor database schema and Prisma client for NAISYS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "prisma/schema.prisma",
    "prisma/migrations"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prisma:migrate": "prisma migrate dev --create-only",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "build": "npm run prisma:generate && tsc",
    "prepare": "npm run build",
    "npm:publish:dryrun": "npm run clean && npm run build && npm publish --dry-run"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@naisys/common": "file:../common",
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.4",
    "prisma": "^7.3.0"
  }
}
