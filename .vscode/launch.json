{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to NAISYS",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"]
    },

    {
      "name": "Debug NAISYS",
      "type": "pwa-node",
      "request": "launch",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "program": "${workspaceFolder}/apps/naisys/src/naisys.ts",
      "args": ["../../agents/assistant.yaml", "--overlord"],
      "cwd": "${workspaceFolder}/apps/naisys",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },

    {
      "name": "Debug Overlord Server",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "watch", "src/server.ts"],
      "cwd": "${workspaceFolder}/apps/overlord/server",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
